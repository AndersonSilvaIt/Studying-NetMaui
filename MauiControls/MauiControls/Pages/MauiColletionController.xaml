<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiControls.Pages.MauiColletionController"
             Title="MauiColletionController">
    <VerticalStackLayout>

		<Label Margin="10,10,10,10" Text="GalÃ¡xias" FontSize="Medium"/>

		<CarouselView ItemsSource="{Binding Fotos}"
					  CurrentItemChanged="CarouselView_CurrentItemChanged"
					  IndicatorView="indicatorView">
			
			<CarouselView.ItemsLayout>
				<LinearItemsLayout Orientation="Vertical"/>
			</CarouselView.ItemsLayout>
			
			<CarouselView.ItemTemplate>
				<DataTemplate>
					<StackLayout>
						<Frame CornerRadius="5"
							   Margin="10"
							   HorizontalOptions="Center"
							   VerticalOptions="CenterAndExpand">
							<StackLayout>
								<Image Source="{Binding ImagemUrl}"
									   Aspect="AspectFill"
									   HeightRequest="400"
									   WidthRequest="400" />
								<Label Text="{Binding Nome}"
									   FontSize="Medium"
									   HorizontalOptions="Center" />
							</StackLayout>
						</Frame>
						
					</StackLayout>
				</DataTemplate>
			</CarouselView.ItemTemplate>
		</CarouselView>

		<IndicatorView x:Name="indicatorView"
					   IndicatorColor="Gray"
					   IndicatorSize="20"
					   VerticalOptions="Center"
					   HorizontalOptions="CenterAndExpand"
					   IndicatorsShape="Circle"
					   SelectedIndicatorColor="Blue"
			
			/>

	</VerticalStackLayout>
</ContentPage>