<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiEstilos1.MainPage">

    <ContentPage.Resources>

        <Color x:Key="bgcolor">Orange</Color>
        <Color x:Key="textcolor">Black</Color>

        <Style TargetType="VerticalStackLayout">
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="Padding" Value="30,0"/>
            <Setter Property="Spacing" Value="25"/>
        </Style>

        <Style TargetType="Button">

            <Setter Property="TextColor" Value="LemonChiffon"/>
            <Setter Property="BackgroundColor" Value="{StaticResource bgcolor}"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="FontSize" Value="Large"/>
            <Setter Property="TextColor" Value="{StaticResource textcolor}"/>
        </Style>

    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout >

            <Button Text="LOGIN" />

            <Button Text="LOGOUT"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
