<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiNavigation.Pages.PaginaInicial"
             Title="PaginaInicial">
    <VerticalStackLayout VerticalOptions="Center" Padding="30" Spacing="30">

        <Button
            Text="Ir para a Página 2"
            FontSize="20"
            x:Name="btnPaginaInicial"
            Clicked="btnPaginaInicial_Clicked"/>

        <Button
            Text="Ir para a Página Modal"
            BackgroundColor="Maroon"
            FontSize="20"
            x:Name="btnPaginaModal"
            Clicked="btnPaginaModal_Clicked"/>

    </VerticalStackLayout>
</ContentPage>